<% short ||= false %>
<% no_gravatar ||= false %>
<% realname = Person.realname_for_login(user) %>

<% unless no_gravatar %>
  <%= gravatar_image(Person.email_for_login(user)) %>
<% end %>

<% unless realname.empty? or short == true %>
  <% printed_name = realname + ' (' + user + ')' %>
<% else %>
  <% printed_name = user %>
<% end %>
<% if @user %>
  <%= link_to(printed_name, :controller => 'home', :user => user) %>
<% else %>
  <%= printed_name %>
<% end %>
