
<%= form_remote_tag :url => { :action => :set_url },
  :loading => "$('#url_form_spinner').show()",
  :complete => "$('#url_form_spinner').hide()",
  :update => 'url_area' do %>
  <%= text_field_tag 'url', @new_url, :size => 40 %>
  <%= image_submit_tag 'icons/note_go.png' %>
  <%= image_tag 'rotating-tail.gif', :id=> 'url_form_spinner', :style => "visibility:hidden;" -%>
  <%= hidden_field_tag 'package', @package.name %>
  <%= hidden_field_tag 'project', @project %>
<% end %>

