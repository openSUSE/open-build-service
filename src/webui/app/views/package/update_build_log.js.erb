<% if @finished %>
  $('#log_space').append('<%= j @log_chunk %>');
  build_finished();
  hide_abort();
<% else %>
  show_abort();
  $('#log_space').append('<%= j @log_chunk %>');
<% if @log_chunk.length < @maxsize || @initial == 0 %>
  autoscroll();
  setTimeout(function() { refresh(<%= @offset %>, 0); },2000);
<% else %>
  refresh(<%= @offset %>, <%= @initial %> );
<% end %>
<% end %>

