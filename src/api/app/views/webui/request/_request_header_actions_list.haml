- if bs_request.bs_request_actions.count == 1
  = render partial: 'webui/shared/bs_request_action_description', locals: { action: bs_request.bs_request_actions.first }
- else
  .list-group.list-group-flush.rounded#request-header-actions-list
    - bs_request.bs_request_actions.group_by(&:type).each_with_index do |(type, actions), index|
      %strong.py-2
        = actions.count
        = type.humanize.titleize
      - actions.each do |action|
        .list-group-item.list-group-item-action
          = render partial: 'webui/shared/bs_request_action_description', locals: { action: action }
