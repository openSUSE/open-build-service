<%= form_for project, url: { action: 'create' } do |f| %>
    <p>
      <b><%= local_assigns.has_key?(:ns) ? 'Subproject' : 'Project'%> Name:</b>
      <br/>
      <% if local_assigns.has_key?(:ns) %>
            <%= hidden_field_tag :ns, ns %>
            <%= ns + ':'%>
      <% end %>
      <%= f.text_field :name, size: 50, required: true %>
      <br/>
      <label for="title"><b>Title: </b></label>
      <br/>
      <%= f.text_field :title, size: 80 %>
      <br/>
      <label for="description"><b>Description:</b></label>
      <br/>
      <%= f.text_area :description, cols: 80, rows: 10, :placeholder => '(markdown markup supported)'  %>
      <br/>
      <% unless configuration['hide_private_options'] %>
          <%= check_box_tag :access_protection, false %>Hide the entire project.
          <br/>
          <%= check_box_tag :source_protection, false %>Deny access to sources of project.
          <br/>
      <% end %>
      <%= check_box_tag :disable_publishing, false %>Disable build results publishing.
      <br/>
    </p>
    <p><%= submit_tag "Create Project" %></p>
<% end %>
