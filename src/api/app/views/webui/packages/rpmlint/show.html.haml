- @pagetitle = "RPM Lint of #{@package} for #{@repository} #{@architecture}"

.card
  = render(partial: 'webui/package/tabs', locals: { project: @project, package: @package })
  .card-body
    %h3= @pagetitle
    - if @rpmlint_log_file
      %pre.text-pre-wrap.rpmlint
        = render partial: 'webui/package/rpmlint_log', locals: { rpmlint_log_file: @rpmlint_log_file,
                                                                 render_chart: true,
                                                                 parsed_messages: @parsed_messages }
    - else
      %i There are no RPM lint results to display
